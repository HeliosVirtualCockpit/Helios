<HeliosSdk:HeliosPropertyEditor x:Class="GadrocsWorkshop.Helios.Controls.CustomGauge3DAppearanceEditor" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:HeliosSdk="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls"
             xmlns:controls="clr-namespace:GadrocsWorkshop.Helios.Controls"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             Height="560" d:DesignWidth="180"
             d:DataContext="{d:DesignInstance Type={x:Type controls:DesignTimeCustomGaugeBall}}">
    <HeliosSdk:HeliosPropertyEditor.Resources>
        <Style x:Key="LineLabelStyle" TargetType="Label">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLines}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LineTextBoxStyle" TargetType="{x:Type HeliosSdk:HeliosTextBox}">
            <Setter Property="Visibility" Value="Visible" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLines}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <controls:DoubleToStringN2Converter x:Key="DoubleToStringN2Converter"/>
        <controls:DoubleToStringN0Converter x:Key="DoubleToStringN0Converter"/>
    </HeliosSdk:HeliosPropertyEditor.Resources>



    <Grid Background="Transparent" Margin="7,6,6,0" Height="560" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="36"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27.96" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Margin="4,10,2,2" Style="{StaticResource Heading2}"><Run Language="en-gb" Text="2D Image"/></TextBlock>
        <Label Grid.Row="1" FontSize="10" HorizontalAlignment="Center" Width="54" Margin="0,2,0,2" Grid.RowSpan="1">
            <Label.ToolTip>2D Image used to wrap around the ball. Ideally the image should have an aspect ratio of 2:1</Label.ToolTip> File Name
        </Label>
        <HeliosSdk:ImagePicker Grid.Column="1" Grid.Row="1"  MaxHeight ="32" ImageFilename="{Binding Control.Image, Mode=TwoWay}" Margin="2,2,2,2" Grid.ColumnSpan="2" Grid.RowSpan="1" />
        <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Margin="4,10,2,2" Style="{StaticResource Heading2}"><Run Language="en-gb" Text="Initial Rotation Values"/></TextBlock>
        <Label Grid.Column="0" Grid.Row="3" FontSize="10" HorizontalAlignment="Right" Width="33" Content="X" Margin="2,2,2,2" Grid.RowSpan="1">
            <Label.ToolTip>Initial rotation of the ball in the X-axis</Label.ToolTip>
        </Label>
        <Slider Name="SliderX" Grid.Column="2" Grid.Row="3" Minimum="0" Maximum="360" Value="{Binding Control.InitialAngleX}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="90" Visibility="Visible"/>
        <HeliosSdk:HeliosTextBox Grid.Column="1" Grid.Row="3" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.InitialAngleX, Converter={StaticResource DoubleToStringN0Converter}}"  />

        <Label Grid.Column="0" Grid.Row="4" FontSize="10" HorizontalAlignment="Right" Width="33" Content="Y" Margin="2,2,2,2" Grid.RowSpan="1">
            <Label.ToolTip>Initial rotation of the ball in the Y-axis</Label.ToolTip>
        </Label>
        <Slider Name="SliderY" Grid.Column="2" Grid.Row="4" Minimum="0" Maximum="360" Value="{Binding Control.InitialAngleY}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="90" Visibility="Visible"/>
        <HeliosSdk:HeliosTextBox Grid.Column="1" Grid.Row="4" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.InitialAngleY, Converter={StaticResource DoubleToStringN0Converter}}"  />

        <Label Grid.Column="0" Grid.Row="5" FontSize="10" HorizontalAlignment="Right" Width="33"  MaxHeight ="32" Content="Z" Margin="2,2,2,2">
            <Label.ToolTip>Initial rotation of the ball in the Z-axis</Label.ToolTip>
        </Label>
        <Slider Name="SliderZ" Grid.Column="2" Grid.Row="5" Minimum="0" Maximum="360" Value="{Binding Control.InitialAngleZ}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="90"  Visibility="Visible"/>
        <HeliosSdk:HeliosTextBox Grid.Column="1" Grid.Row="5" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.InitialAngleZ, Converter={StaticResource DoubleToStringN0Converter}}"  />
        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" Margin="2,2,2,2" Style="{StaticResource Heading2}" Text=" Values"/>

        <Label Grid.Column="0" Grid.Row="7" FontSize="10" HorizontalAlignment="Left" Width="41" Margin="2,0,0,0" Content="FoV">
            <Label.ToolTip>Field of View. This represents how much of the ball can be viewed</Label.ToolTip>
        </Label>
        <Slider Name="SliderFOV" Grid.Column="2" Grid.Row="7" Minimum="0" Maximum="90" Value="{Binding Control.FieldOfView}" Margin="2,0,2,0" TickPlacement="BottomRight" TickFrequency="15" Visibility="Visible"/>
        <HeliosSdk:HeliosTextBox Grid.Column="1" Grid.Row="7" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.FieldOfView, Converter={StaticResource DoubleToStringN0Converter}}"  />

        <Label Grid.Row="8" Grid.Column="0" FontSize="10" HorizontalContentAlignment="Left" Padding="2,2,2,2" VerticalContentAlignment="Center" Content="Calibration" Margin="9,0,9,0" >
            <Label.ToolTip>When checked, basic calibration information can be set for all axes</Label.ToolTip>
        </Label>
        <CheckBox Name="CalibrationNeededCheckBox" Grid.Column="1" Grid.Row="8" VerticalAlignment="Center" IsChecked="{Binding Control.CalibrationNeeded}">
            <CheckBox.ToolTip>When checked, basic calibration information can be set for all axes</CheckBox.ToolTip>
        </CheckBox>
        <StackPanel Grid.Row="9" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="3">
            <Grid Visibility="{Binding ElementName=CalibrationNeededCheckBox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Margin="2,0,2,0" Style="{StaticResource Heading2}" Text="Axes Calibration"/>
                <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="2,0,2,0" Style="{StaticResource Heading2}" Text="X Axis"/>
                <TextBlock Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="2" Margin="2,0,2,0" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource Heading2}" Text="Input"/>
                <Label Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="2" Margin="2,0,2,0"  VerticalAlignment="Center" Content="Min"/>
                <HeliosSdk:HeliosTextBox Grid.Column="2" Grid.Row="2" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.MinInputX, Converter={StaticResource DoubleToStringN0Converter}}"  />
                <Label Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="2" Margin="2,0,2,0"  VerticalAlignment="Center" Content="Max"/>
                <HeliosSdk:HeliosTextBox Grid.Column="4" Grid.Row="2" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.MaxInputX, Converter={StaticResource DoubleToStringN0Converter}}"  />
                <TextBlock Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="3" Margin="2,0,2,0" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource Heading2}" Text="Output"/>
                <Label Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="3" Margin="2,0,2,0"  VerticalAlignment="Center" Content="Min"/>
                <HeliosSdk:HeliosTextBox Grid.Column="2" Grid.Row="3" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.MinOutputX, Converter={StaticResource DoubleToStringN0Converter}}"  />
                <Label Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="3" Margin="2,0,2,0"  VerticalAlignment="Center" Content="Max"/>
                <HeliosSdk:HeliosTextBox Grid.Column="4" Grid.Row="3" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.MaxOutputX, Converter={StaticResource DoubleToStringN0Converter}}"  />

                <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" Margin="2,0,2,0" Style="{StaticResource Heading2}" Text="Y Axis"/>
                <TextBlock Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="5" Margin="2,0,2,0" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource Heading2}" Text="Input"/>
                <Label Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="5" Margin="2,0,2,0" VerticalAlignment="Center" Content="Min"/>
                <HeliosSdk:HeliosTextBox Grid.Column="2" Grid.Row="5" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.MinInputY, Converter={StaticResource DoubleToStringN0Converter}}"  />
                <Label Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="5" Margin="2,0,2,0"  VerticalAlignment="Center" Content="Max"/>
                <HeliosSdk:HeliosTextBox Grid.Column="4" Grid.Row="5" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.MaxInputY, Converter={StaticResource DoubleToStringN0Converter}}"  />
                <TextBlock Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="6" Margin="2,0,2,0" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource Heading2}" Text="Output"/>
                <Label Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="6" Margin="2,0,2,0"  VerticalAlignment="Center" Content="Min"/>
                <HeliosSdk:HeliosTextBox Grid.Column="2" Grid.Row="6" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.MinOutputY, Converter={StaticResource DoubleToStringN0Converter}}"  />
                <Label Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="6" Margin="2,0,2,0"  VerticalAlignment="Center" Content="Max"/>
                <HeliosSdk:HeliosTextBox Grid.Column="4" Grid.Row="6" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.MaxOutputY, Converter={StaticResource DoubleToStringN0Converter}}"  />

                <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="7" Margin="2,0,2,0" Style="{StaticResource Heading2}" Text="Z Axis"/>
                <TextBlock Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="8" Margin="2,0,2,0" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource Heading2}" Text="Input"/>
                <Label Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="8" Margin="2,0,2,0"  VerticalAlignment="Center" Content="Min"/>
                <HeliosSdk:HeliosTextBox Grid.Column="2" Grid.Row="8" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.MinInputZ, Converter={StaticResource DoubleToStringN0Converter}}"  />
                <Label Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="8" Margin="2,0,2,0"  VerticalAlignment="Center" Content="Max"/>
                <HeliosSdk:HeliosTextBox Grid.Column="4" Grid.Row="8" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.MaxInputZ, Converter={StaticResource DoubleToStringN0Converter}}"  />
                <TextBlock Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="9" Margin="2,0,2,0" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource Heading2}" Text="Output"/>
                <Label Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="9" Margin="2,0,2,0"  VerticalAlignment="Center" Content="Min"/>
                <HeliosSdk:HeliosTextBox Grid.Column="2" Grid.Row="9" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.MinOutputZ, Converter={StaticResource DoubleToStringN0Converter}}"  />
                <Label Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="9" Margin="2,0,2,0"  VerticalAlignment="Center" Content="Max"/>
                <HeliosSdk:HeliosTextBox Grid.Column="4" Grid.Row="9" Grid.RowSpan="1" FontSize="10" Height="24" VerticalContentAlignment="Center" Margin="2,0,2,0" Text="{Binding Control.MaxOutputZ, Converter={StaticResource DoubleToStringN0Converter}}"  />

            </Grid>
        </StackPanel>
        
    </Grid>
</HeliosSdk:HeliosPropertyEditor>

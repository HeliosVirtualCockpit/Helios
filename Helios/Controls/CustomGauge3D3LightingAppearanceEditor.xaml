<HeliosSdk:HeliosPropertyEditor x:Class="GadrocsWorkshop.Helios.Controls.CustomGauge3D3LightingAppearanceEditor" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:HeliosSdk="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls"
             xmlns:controls="clr-namespace:GadrocsWorkshop.Helios.Controls"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             Height="220" d:DesignWidth="180"
             d:DataContext="{d:DesignInstance Type={x:Type controls:DesignTimeCustomGaugeBall}}">
    <HeliosSdk:HeliosPropertyEditor.Resources>
        <Style x:Key="LineLabelStyle" TargetType="Label">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLines}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LineTextBoxStyle" TargetType="{x:Type HeliosSdk:HeliosTextBox}">
            <Setter Property="Visibility" Value="Visible" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLines}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </HeliosSdk:HeliosPropertyEditor.Resources>

    <Grid Background="Transparent" Margin="7,6,6,7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="36"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Margin="2,2,2,2" Style="{StaticResource Heading2}" Text=" Lighting Source"/>
        <Label Grid.Column="0" Grid.Row="1" FontSize="10" HorizontalAlignment="Left" Width="41" Margin="12,0,0,2" Content="Color">
            <Label.ToolTip>Color of the light used to illuminate the ball</Label.ToolTip>
        </Label>
        <HeliosSdk:ColorWell Grid.Column="1" Grid.ColumnSpan="2"
                             Grid.Row="1"
                             Color="{Binding Control.LightingColor,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             HorizontalAlignment="Left"
                             Margin="2,2,0,2" />
        <Label Grid.Row="2" FontSize="10" HorizontalAlignment="Center" Width="51" Margin="0,0,0,2" Content="Alt Color">
            <Label.ToolTip>Color of the light used to illuminate the ball when Enable Alt Lighting is true</Label.ToolTip>
        </Label>
        <HeliosSdk:ColorWell Grid.Column="1" Grid.ColumnSpan="2"
                             Grid.Row="2"
                             Color="{Binding Control.LightingColorAlt,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             HorizontalAlignment="Left"
                             Margin="2,2,0,2" />
        <Label Grid.Column="0" Grid.Row="3" FontSize="10" HorizontalAlignment="Left" Width="33" Content="X" Margin="20,0,0,2" Grid.RowSpan="1">
            <Label.ToolTip>Lighting direction on the X-axis</Label.ToolTip>
        </Label>
        <Slider Grid.Column="2" Grid.Row="3" Minimum="-5" Maximum="5" Value="{Binding Control.LightingX}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="1"/>
        <HeliosSdk:HeliosTextBox  Grid.Column="1" Grid.Row="3" FontSize="10" MaxWidth ="32" Text="{Binding Path=Control.LightingX}" Margin="2,2,2,2" Style="{StaticResource LineTextBoxStyle}" Visibility="Collapsed" />
        <Label Grid.Column="0" Grid.Row="4" FontSize="10" HorizontalAlignment="Left" Width="33" Content="Y" Margin="20,0,0,2" Grid.RowSpan="1">
            <Label.ToolTip>Lighting direction on the Y-axis</Label.ToolTip>
        </Label>
        <Slider Grid.Column="2" Grid.Row="4" Minimum="-5" Maximum="5" Value="{Binding Control.LightingY}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="1"/>
        <HeliosSdk:HeliosTextBox  Grid.Column="1" Grid.Row="4" FontSize="10" MaxWidth ="32" Text="{Binding Path=Control.LightingY}" Margin="2,2,2,2" Style="{StaticResource LineTextBoxStyle}" Visibility="Collapsed" />
        <Label Grid.Column="0" Grid.Row="5" FontSize="10" HorizontalAlignment="Left" Width="33" Content="Z" Margin="20,0,0,2" Grid.RowSpan="1">
            <Label.ToolTip>Lighting direction on the Z-axis</Label.ToolTip>
        </Label>
        <Slider Grid.Column="2" Grid.Row="5" Minimum="-10" Maximum="0" Value="{Binding Control.LightingZ}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="2"/>
        <HeliosSdk:HeliosTextBox  Grid.Column="1" Grid.Row="5" FontSize="10" MaxWidth ="32" Text="{Binding Path=Control.LightingZ}" Margin="2,2,2,2" Style="{StaticResource LineTextBoxStyle}" Visibility="Collapsed" />
    </Grid>
</HeliosSdk:HeliosPropertyEditor>

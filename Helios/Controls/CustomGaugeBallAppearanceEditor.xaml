<HeliosSdk:HeliosPropertyEditor x:Class="GadrocsWorkshop.Helios.Controls.CustomGaugeBallAppearanceEditor" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:HeliosSdk="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls"
             xmlns:controls="clr-namespace:GadrocsWorkshop.Helios.Controls"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             Height="1671" d:DesignWidth="180"
             d:DataContext="{d:DesignInstance Type={x:Type controls:DesignTimeCustomGaugeBall}}">
    <HeliosSdk:HeliosPropertyEditor.Resources>
        <Style x:Key="LineLabelStyle" TargetType="Label">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLines}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LineTextBoxStyle" TargetType="{x:Type HeliosSdk:HeliosTextBox}">
            <Setter Property="Visibility" Value="Visible" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLines}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </HeliosSdk:HeliosPropertyEditor.Resources>



    <Grid Background="Transparent" Margin="7,6,6,82">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="36"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Margin="4,10,2,2" Style="{StaticResource Heading2}"><Run Language="en-gb" Text="2D Image"/></TextBlock>
        <Label Grid.Row="3" FontSize="10" HorizontalAlignment="Left" Width="54" Margin="2,2,2,2
               " Grid.RowSpan="1" Grid.ColumnSpan="1">
            <Label.ToolTip>2D Image used to wrap around the ball. Ideally the image should have an aspect ratio of 2:1</Label.ToolTip> File Name
        </Label>
        <HeliosSdk:ImagePicker Grid.Column="1" Grid.Row="3" ImageFilename="{Binding Control.Image, Mode=TwoWay}" Margin="0,0,0,0" Grid.ColumnSpan="2" />
        <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" Margin="4,10,2,2" Style="{StaticResource Heading2}"><Run Language="en-gb" Text="Base Rotation Values"/></TextBlock>
        <Label Grid.Column="0" Grid.Row="5" FontSize="10" HorizontalAlignment="Right" Width="33" Content="X" Margin="2,0,0,2" Grid.RowSpan="2">
            <Label.ToolTip>Initial rotation of the ball in the X-axis</Label.ToolTip>
        </Label>
        <Slider Grid.Column="2" Grid.Row="5" Minimum="0" Maximum="360" Value="{Binding Control.BasePitch}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="90" Visibility="Collapsed"/>
        <HeliosSdk:HeliosTextBox  Grid.Column="1" Grid.Row="5" FontSize="10" MaxWidth ="32" Text="{Binding Control.BasePitch}" Margin="2,2,2,2" Style="{StaticResource LineTextBoxStyle}" Grid.RowSpan="1" />

        <Label Grid.Column="0" Grid.Row="6" FontSize="10" HorizontalAlignment="Right" Width="33" Content="Y" Margin="2,0,0,2" Grid.RowSpan="1">
            <Label.ToolTip>Initial rotation of the ball in the Y-axis</Label.ToolTip>
        </Label>
        <Slider Grid.Column="2" Grid.Row="6" Minimum="0" Maximum="360" Value="{Binding Control.BaseYaw}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="90" Visibility="Collapsed"/>
        <HeliosSdk:HeliosTextBox  Grid.Column="1" Grid.Row="6" FontSize="10" MaxWidth ="32" Text="{Binding Path=Control.BaseYaw}" Margin="2,2,2,2" Style="{StaticResource LineTextBoxStyle}" />

        <Label Grid.Column="0" Grid.Row="7" FontSize="10" HorizontalAlignment="Right" Width="33" Content="Z" Margin="2,0,0,2" Grid.RowSpan="1">
            <Label.ToolTip>Initial rotation of the ball in the Z-axis</Label.ToolTip>
        </Label>
        <Slider Grid.Column="2" Grid.Row="7" Minimum="0" Maximum="360" Value="{Binding Control.BaseRoll}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="90"  Visibility="Collapsed"/>
        <HeliosSdk:HeliosTextBox  Grid.Column="1" Grid.Row="7" FontSize="10" MaxWidth ="32" Text="{Binding Path=Control.BaseRoll}" Margin="2,2,2,2" Style="{StaticResource LineTextBoxStyle}" />
        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="8" Margin="4,10,2,2" Style="{StaticResource Heading2}" Text=" Values"/>

        <Label Grid.Column="0" Grid.Row="9" FontSize="10" HorizontalAlignment="Right" Width="41" Margin="2,0,0,2" Content="FoV">
            <Label.ToolTip>Field of View. This represents how much of the ball can be viewed</Label.ToolTip>
        </Label>
        <Slider Grid.Column="2" Grid.Row="9" Minimum="0" Maximum="90" Value="{Binding Control.FieldOfView}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="15" Visibility="Visible"/>
        <HeliosSdk:HeliosTextBox  Grid.Column="1" Grid.Row="9" FontSize="10" MaxWidth ="32" Text="{Binding Path=Control.FieldOfView}" Margin="2,0,0,2" Style="{StaticResource LineTextBoxStyle}" Visibility="Collapsed"/>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="10" Margin="2,2,2,2" Style="{StaticResource Heading2}" Text=" Lighting Source"/>
        <Label Grid.Column="0" Grid.Row="11" FontSize="10" HorizontalAlignment="Right" Width="41" Margin="2,0,0,2" Content="Color">
            <Label.ToolTip>Color of the light used to illuminate the ball</Label.ToolTip>
        </Label>
        <HeliosSdk:ColorWell Grid.Column="1" Grid.ColumnSpan="2"
                             Grid.Row="11"
                             Color="{Binding Control.LightingColor,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             HorizontalAlignment="Left"
                             Margin="2" />
        <Label Grid.Column="0" Grid.Row="12" FontSize="10" HorizontalAlignment="Right" Width="51" Margin="2,0,0,2" Content="Alt Color">
            <Label.ToolTip>Color of the light used to illuminate the ball when Enable Alt Lighting is true</Label.ToolTip>
        </Label>
        <HeliosSdk:ColorWell Grid.Column="1" Grid.ColumnSpan="2"
                             Grid.Row="12"
                             Color="{Binding Control.LightingColorAlt,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             HorizontalAlignment="Left"
                             Margin="2" />
        <Label Grid.Column="0" Grid.Row="13" FontSize="10" HorizontalAlignment="Right" Width="33" Content="X" Margin="2,0,0,2" Grid.RowSpan="1">
            <Label.ToolTip>Lighting direction on the X-axis</Label.ToolTip>
        </Label>
        <Slider Grid.Column="2" Grid.Row="13" Minimum="-5" Maximum="5" Value="{Binding Control.LightingX}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="1"/>
        <HeliosSdk:HeliosTextBox  Grid.Column="1" Grid.Row="13" FontSize="10" MaxWidth ="32" Text="{Binding Path=Control.LightingX}" Margin="2,2,2,2" Style="{StaticResource LineTextBoxStyle}" Visibility="Collapsed" />
        <Label Grid.Column="0" Grid.Row="14" FontSize="10" HorizontalAlignment="Right" Width="33" Content="Y" Margin="2,0,0,2" Grid.RowSpan="1">
            <Label.ToolTip>Lighting direction on the Y-axis</Label.ToolTip>
        </Label>
        <Slider Grid.Column="2" Grid.Row="14" Minimum="-5" Maximum="5" Value="{Binding Control.LightingY}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="1"/>
        <HeliosSdk:HeliosTextBox  Grid.Column="1" Grid.Row="14" FontSize="10" MaxWidth ="32" Text="{Binding Path=Control.LightingY}" Margin="2,2,2,2" Style="{StaticResource LineTextBoxStyle}" Visibility="Collapsed" />
        <Label Grid.Column="0" Grid.Row="15" FontSize="10" HorizontalAlignment="Right" Width="33" Content="Z" Margin="2,0,0,2" Grid.RowSpan="1">
            <Label.ToolTip>Lighting direction on the Z-axis</Label.ToolTip>
        </Label>
        <Slider Grid.Column="2" Grid.Row="15" Minimum="-10" Maximum="0" Value="{Binding Control.LightingZ}" Margin="2,2,2,2" TickPlacement="BottomRight" TickFrequency="2"/>
        <HeliosSdk:HeliosTextBox  Grid.Column="1" Grid.Row="15" FontSize="10" MaxWidth ="32" Text="{Binding Path=Control.LightingZ}" Margin="2,2,2,2" Style="{StaticResource LineTextBoxStyle}" Visibility="Collapsed" />
    </Grid>
</HeliosSdk:HeliosPropertyEditor>
